---
import Menu from "../components/Menu.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script
			src="https://kit.fontawesome.com/57fb3a03b8.js"
			crossorigin="anonymous"
		></script>
		<title>{title}</title>
	</head>
	<body class="grid p-6 text-xl grid-cols-4 gap-6">
		<header class="col-span-4">
			<h1 class="text-red-400">{title}</h1>
		</header>
		<nav class="col-span-1"><Menu /></nav>
		<main class="col-span-3"><slot /></main>
	</body>
</html>

<style is:global>
	a {
		@apply text-blue-800 hover:underline;
	}
	h1 {
		@apply text-4xl;
	}
	h2 {
		@apply text-3xl;
	}
</style>
